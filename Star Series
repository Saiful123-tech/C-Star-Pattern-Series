 int n = Convert.ToInt32(Console.ReadLine());
        for (int i = n-1; i>=0; i--)
        {
            for (int j = 0; j <n+i; j++)
            {
                if(j >=(n-i)-1 && j<=(n+i)-1)
                {
                    Console.Write("*");
                }
                else
                {
                    Console.Write(" ");
                }
            }
            Console.WriteLine();
        }
