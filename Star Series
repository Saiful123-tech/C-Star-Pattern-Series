  int n = Convert.ToInt32(Console.ReadLine());
        for (int i = n-1; i >= 0; i--)
        {
            for (int j = 0; j < n+i; j++)
            {
                if(j<i)
                {
                    Console.Write(" ");
                    continue;
                }
                Console.Write("*");
            }
            Console.WriteLine();
        }

        int n = Convert.ToInt32(Console.ReadLine());
        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n+i; j++)
            {
                if (j > i)
                {
                    Console.Write("*");
                }
                else
                {
                    Console.Write(" ");
                }             
            }
            Console.WriteLine();
        }


