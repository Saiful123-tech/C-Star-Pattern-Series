 int n = Convert.ToInt32(Console.ReadLine());
        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n+2; j++)
            {
                if((i>0 && i<(n-1)) && (j>0 && j < (n + 2)-1))
                {
                    Console.Write(" ");
                    continue;
                }
                Console.Write("*");
            }
            Console.WriteLine();
        }

